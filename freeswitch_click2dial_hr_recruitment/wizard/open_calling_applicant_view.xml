<openerp>
<data>

<!-- Get partner from incoming phone call -->
<record id="view_open_calling_applicant" model="ir.ui.view">
    <field name="name">view_open_calling_applicant</field>
    <field name="model">wizard.open.calling.applicant</field>
    <field name="arch" type="xml">
        <form string="Open calling applicant" version="7.0">
            <group name="display_result">
                <field name="calling_number"/>
                <field name="partner_id" attrs="{'invisible':[('partner_id','=',False)]}"/>
                <field name="partner_name" attrs="{'invisible':[('partner_name','=',False)]}"/>
                <field name="job_id" attrs="{'invisible':[('job_id','=',False)]}"/>
                <field name="job_state" attrs="{'invisible':[('job_state','=',False)]}"/>
            </group>
            <group attrs="{'invisible':[('partner_id','=',False)]}" name="partner_found">
                <button name="open_applicant" icon="gtk-go-forward" string="Open Applicant form" type="object" />
                <button name="open_job" icon="gtk-go-forward" string="Open Job" type="object" attrs="{'invisible':[('job_id','=',False)]}"/>
                <button name="case_cancel" string="Refuse" type="object" class="oe_highlight"/>
            </group>
            <group attrs="{'invisible':[('partner_id','!=',False)]}" name="no_partner_found" colspan="4" col="8">
                <label string="No applicant found in OpenERP with this number" colspan="8" />
                <separator string="Create a new applicant" colspan="8" />
                <button name="create_applicant_phone" icon="gtk-new" string="with calling number as phone" type="object" colspan="4"/>
                <button name="create_applicant_mobile" icon="gtk-new" string="with calling number as mobile" type="object" colspan="4"/>
                <newline />

                <separator string="Update an existing applicant" colspan="8" />
                <field name="to_update_partner_id" colspan="8" on_change="onchange_to_update_applicant(to_update_partner_id)"/>
                <field name="current_phone" colspan="6"/>
                <button name="update_applicant_phone" icon="gtk-convert" string="Update phone" type="object" colspan="2"/>
                <field name="current_mobile" colspan="6"/>
                <button name="update_applicant_mobile" icon="gtk-convert" string="Update mobile" type="object" colspan="2"/>
            </group>
            <footer>
                <button special="cancel" string="Cancel" class="oe_link"/>
            </footer>
        </form>
    </field>
</record>

<record id="action_open_calling_applicant" model="ir.actions.act_window">
    <field name="name">Open calling applicant</field>
    <field name="res_model">wizard.open.calling.applicant</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<menuitem name="Open calling applicant"
          id="menu_open_calling_hr_recruitment_phone"
          parent="base.menu_crm_case_job_req_main"
          action="action_open_calling_applicant"
          sequence="2" />

</data>
</openerp>
